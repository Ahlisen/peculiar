<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".BootActivity">

	<android.support.constraint.Guideline
		android:id="@+id/top_guideline"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.1"/>

	<ImageView
		android:id="@+id/icon"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:src="@drawable/ic_hen"
		app:layout_constraintTop_toTopOf="@id/top_guideline"
		app:layout_constraintBottom_toTopOf="@id/download_text"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"/>

	<android.support.constraint.Group
		android:id="@+id/download_group"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:constraint_referenced_ids=
			"download_text,
			download_progress_bar,
			download_progress_percent_text"
		android:visibility="gone"
		tools:visibility="visible"/>

	<TextView
		android:id="@+id/download_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:lines="2"
		android:layout_marginTop="20dp"
		android:padding="10dp"
		android:text="@string/wait_file_download"
		app:layout_constraintTop_toBottomOf="@id/icon"
		app:layout_constraintBottom_toTopOf="@id/download_progress_bar"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		/>

	<ProgressBar
		android:id="@+id/download_progress_bar"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:max="100"
		tools:progress="45"
		app:layout_constraintTop_toBottomOf="@id/download_text"
		app:layout_constraintBottom_toTopOf="@id/download_progress_percent_text"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"/>

	<TextView
		android:id="@+id/download_progress_percent_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/download_progress_bar"
		android:lines="2"
		android:padding="10dp"
		tools:text="45%"
		app:layout_constraintTop_toBottomOf="@id/download_progress_bar"
		app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"/>

	<android.support.constraint.Guideline
		android:id="@+id/bottom_guideline"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.9"/>

</android.support.constraint.ConstraintLayout>